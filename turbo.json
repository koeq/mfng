{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/src/**/*",
        "**/package.js",
        "**/webpack.config.js",
        "!**/*.test.ts"
      ],
      "outputs": ["dist/**", "lib/**", "tsconfig.tsbuildinfo"]
    },
    "build:dev": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/src/**/*",
        "**/package.js",
        "**/webpack.config.js",
        "!**/*.test.ts"
      ],
      "outputs": ["dist/**", "lib/**"]
    },
    "deploy": {
      "dependsOn": ["build"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["build:dev"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "watch": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "watch:dev": {
      "dependsOn": ["build:dev"],
      "cache": false,
      "persistent": true
    }
  }
}
