{
  "name": "mfng",
  "version": "1.0.0",
  "description": "Micro Frontends Next Generation - An RSC Playground",
  "license": "MIT",
  "author": "Hendrik Liebau <mail@hendrik-liebau.de>",
  "type": "module",
  "workspaces": [
    "apps/main-app",
    "packages/webpack-rsc-edge-plugin"
  ],
  "scripts": {
    "build": "turbo build",
    "ci": "concurrently -c auto -n compile,format,lint,test 'npm run compile' 'npm run format:check' 'npm run lint' 'npm test'",
    "clean": "npm run compile:clean && rimraf {apps,packages}/*/{dist,lib}",
    "compile": "tsc --build",
    "compile:clean": "tsc --build --clean",
    "deploy": "turbo deploy:rsc deploy:main",
    "dev": "turbo watch:dev dev:rsc dev:main",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint .",
    "start": "turbo start:rsc start:main",
    "pretest": "turbo build:dev",
    "test": "jest -c jest.config.js --debug",
    "watch": "turbo watch"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.14",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-markdown": "^3.0.0",
    "jest": "^29.5.0",
    "jest-config": "^29.5.0",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "react-dom": "18.3.0-next-f828bad38-20230313",
    "rimraf": "^4.4.1",
    "turbo": "^1.8.6",
    "typescript": "^4.9.5"
  }
}
