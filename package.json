{
  "name": "mfng",
  "version": "1.0.0",
  "description": "Micro Frontends Next Generation - An RSC Playground",
  "license": "MIT",
  "author": "Hendrik Liebau <mail@hendrik-liebau.de>",
  "type": "module",
  "scripts": {
    "build:main": "webpack",
    "build:rsc": "webpack -c webpack.config.rsc.js",
    "build": "concurrently -c auto 'npm run build:*'",
    "ci": "concurrently -c auto -n compile,format,lint 'npm run compile' 'npm run format:check' 'npm run lint'",
    "compile": "tsc --build",
    "deploy:main": "wrangler publish -c src/workers/main/wrangler.toml",
    "deploy:rsc": "wrangler publish -c src/workers/rsc/wrangler.toml",
    "predeploy": "npm run build",
    "deploy": "npm run deploy:main && npm run deploy:rsc",
    "dev": "MODE=development npm run start",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint .",
    "start:main": "wrangler dev -c src/workers/main/wrangler.toml -l",
    "start:rsc": "wrangler dev -c src/workers/rsc/wrangler.toml -l",
    "prestart": "npm run build",
    "start": "concurrently -c auto -k 'npm run build:* -- --watch' 'npm run start:*'",
    "test": "jest --no-coverage"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "countries-list": "^2.6.1",
    "cssnano": "^5.1.15",
    "fuse.js": "^6.6.2",
    "history": "^5.3.0",
    "htmlescape": "^1.1.1",
    "react": "18.3.0-next-f828bad38-20230313",
    "react-dom": "18.3.0-next-f828bad38-20230313",
    "react-markdown": "^8.0.5",
    "react-server-dom-webpack": "18.3.0-next-f828bad38-20230313",
    "server-only": "^0.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/generator": "^7.21.3",
    "@babel/parser": "^7.21.3",
    "@babel/traverse": "^7.21.3",
    "@babel/types": "^7.21.3",
    "@cloudflare/kv-asset-handler": "^0.3.0",
    "@cloudflare/workers-types": "^4.20230221.0",
    "@swc/core": "^1.3.22",
    "@swc/jest": "^0.2.24",
    "@types/babel__generator": "^7.6.4",
    "@types/babel__parser": "^7.1.1",
    "@types/babel__traverse": "^7.18.3",
    "@types/htmlescape": "^1.1.1",
    "@types/jest": "^29.4.0",
    "@types/loader-utils": "^2.0.3",
    "@types/memory-fs": "^0.3.3",
    "@types/node": "^18.11.14",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/source-map": "^0.5.7",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "autoprefixer": "^10.4.14",
    "concurrently": "^7.6.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-markdown": "^3.0.0",
    "jest": "^29.5.0",
    "loader-utils": "^3.2.1",
    "memory-fs": "^0.5.0",
    "mini-css-extract-plugin": "^2.7.3",
    "postcss": "^8.4.21",
    "postcss-loader": "^7.0.2",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "resolve-typescript-plugin": "^2.0.0",
    "source-map": "^0.7.4",
    "swc-loader": "^0.2.3",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-manifest-plugin": "^5.0.0",
