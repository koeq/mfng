{
  "name": "mfng",
  "version": "1.0.0",
  "description": "Micro Frontends Next Generation - An RSC Playground",
  "license": "MIT",
  "author": "Hendrik Liebau <mail@hendrik-liebau.de>",
  "type": "module",
  "workspaces": [
    "apps/main-app",
    "packages/webpack-rsc-edge-plugin"
  ],
  "scripts": {
    "build": "turbo build",
    "ci": "concurrently -c auto -n compile,format,lint 'npm run compile' 'npm run format:check' 'npm run lint'",
    "compile": "tsc --build",
    "deploy": "turbo deploy",
    "dev": "turbo dev",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint .",
    "start": "turbo start",
    "test": "jest"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.14",
    "concurrently": "^7.6.0",
    "jest": "^29.5.0",
    "jest-config": "^29.5.0",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "turbo": "^1.8.6",
    "typescript": "^4.9.5"
  }
}
